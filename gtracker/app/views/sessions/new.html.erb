<h1> Sign in </h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class=field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class=field>
    <%= f.label :password %><br/>
    <%= f.password_field :password %><br/>
  </div>
  <div class="actions">
    <input id="session_submit" name="commit" type="submit" value="Sign in"/>
  </div>
<% end %>
